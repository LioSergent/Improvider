<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ThemeMenu" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@drawable/backmenuprincipal1</item>
        <item name="android:textColor">@color/black</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MonTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@drawable/background1</item>
        <item name="android:textColor">@color/black</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="themeMain" parent="AppBaseTheme">
        
        <item name="android:textColor">@color/black</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 
     <style name="themeMain2" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="seekBarStyle">
    <item name="android:minHeight">3dp</item>
    <item name="android:maxHeight">3dp</item>                         
     <item name="android:progressDrawable">@drawable/progress</item>
    </style>
     
     
    <style name="btnStyleGenoa" parent="@android:style/Widget.Button">
       <item name="android:textSize">40sp</item>       
       <item name="android:textColor">@color/white</item>
       <item name="android:gravity">center</item>
      <item name="android:typeface">sans</item>
      <item name="android:textStyle">bold</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/custom_btn_genoa</item>
       <item name="android:padding">10dip</item>
   </style>
   
    <style name="falseButton" parent="@android:style/Widget.Button">
       <item name="android:textSize">30sp</item>       
       <item name="android:textColor">@color/black</item>
       <item name="android:gravity">center</item>
      <item name="android:typeface">sans</item>
      <item name="android:textStyle">normal</item>
       <item name="android:background">@drawable/false_button</item>
       <item name="android:padding">10dip</item>
   </style>
   
</resources>
