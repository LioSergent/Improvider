<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MonTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:fadeScrollbars="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context=".ImproviderCredits" >

    <TextView
        android:id="@+id/text_credits1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="@string/credits1"
        android:textColor="@color/black"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/text_credits2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_credits1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/credits2"
        android:textColor="@color/black"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/text_credits3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_credits2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/credits3"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bouton_credits_retour"
        style="@style/btnStyleGenoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_credits3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/retour"
        android:textSize="45sp" />

</RelativeLayout>